<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DigitalHouseFoods" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorPrimaryVariant">@color/indigo_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_200</item>
        <item name="colorSecondaryVariant">@color/red_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <!-- Default: ProgressBar -->
    <style name="defaultProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorControlActivated">@color/indigo_500</item>
        <item name="android:textColor">@color/indigo_500</item>
    </style>

    <!-- Default: TextInputLayout -->
    <style name="defaultTextInputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>

        <item name="boxBackgroundColor">@android:color/transparent</item>

        <item name="android:textColorHint">@color/indigo_200</item>
        <item name="endIconTint">@color/indigo_200</item>
        <item name="boxStrokeColor">@color/default_text_input_layout</item>
    </style>

    <!-- Default:  TextInputEditText -->
    <style name="defaultTextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>

        <item name="android:textColor">@color/indigo_500</item>
    </style>

    <!-- Form -->
    <style name="defaultFormButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="defaultFormActionButton" parent="defaultFormButton">
        <item name="android:layout_marginTop">64dp</item>
        <item name="backgroundTint">@color/red_a200</item>
    </style>

    <style name="defaultFormCancelButton" parent="defaultFormButton">
        <item name="backgroundTint">@color/indigo_200</item>
    </style>

    <!-- Login -->
    <style name="loginOptionSeparatorView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/indigo_50</item>
    </style>

    <style name="loginOptionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>